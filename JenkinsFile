pipeline {
    agent any

    tools {
        nodejs 'Node20'          // Name must match your NodeJS tool in Global Tool Configuration
    }

    environment {
        CI = "true"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                bat 'npm ci'
            }
        }

        stage('Run Playwright API Tests') {
            steps {
                retry(1)                       
                    bat 'npx playwright test'
                }
            }
        }
    }

    post {
        always {
            echo "Publishing Allure Report..."

            // âœ… This is the ONLY Allure step you need in pipeline
            allure([
                includeProperties: false,
                jdk: '',
                results: [[path: 'allure-results']]
            ])

            // (Optional) keep HTML report as well
            echo "Publishing HTML Report..."
            publishHTML([
                allowMissing: true,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'playwright-report',
                reportFiles: 'index.html',
                reportName: 'Playwright HTML Report'
            ])

            // (Optional) if you later add JUnit:
            echo "Publishing Junit Report..."
            junit 'test-results/results.xml'
        }
    }
}
