@Library('playwright-lib') _

pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    playwrightUtils.installDependencies()
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    playwrightUtils.runTests()
                }
            }
        }

        stage('Publish Reports') {
            steps {
                script {
                    playwrightUtils.publishAllure()
                    playwrightUtils.publishJUnitReport()
                    playwrightUtils.publishHtmlReport()
                }
            }
        }
    }
}
