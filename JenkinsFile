@Library('playwright-lib') _

pipeline {
    agent any

    tools {
        nodejs 'Node20'
    }

    environment {
        CI = "true"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                installDependencies()
            }
        }

        stage('Run Tests') {
            steps {
                runTests()
            }
        }
    }

    post {
        always {
            publishAllure()
            publishHtmlReport()
        }
    }
}
