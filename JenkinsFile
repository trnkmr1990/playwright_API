@Library('playwright-lib') _
def utils = new playwrightUtils()

pipeline {
    agent any

    tools {
        nodejs 'Node20'
    }

    environment {
        CI = "true"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                utils.installDependencies()
            }
        }

        stage('Run Tests') {
            steps {
                utils.runTests()
            }
        }
    }

    post {
        always {
            utils.publishAllure()
            utils.publishHTML()
        }
    }
}
